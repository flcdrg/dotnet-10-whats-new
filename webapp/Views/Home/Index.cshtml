@model List<webapp.Models.Pet>

@{
    ViewData["Title"] = "Petstore - Home";
}

<div class="container py-5">
    <h1 class="mb-4">Welcome to Our Petstore</h1>

    @if (TempData["Error"] is string errorMessage)
    {
        <div class="alert alert-warning" role="alert">@errorMessage</div>
    }

    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" action="/Home/Search" class="input-group">
                <input type="text" name="query" class="form-control" placeholder="Search for pets by name, species, or description...">
                <button class="btn btn-primary" type="submit">Search</button>
            </form>
        </div>
        <div class="col-md-6 text-end">
            <a href="/Cart/Index" class="btn btn-outline-secondary">
                <i class="bi bi-cart"></i> View Cart
            </a>
        </div>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">No pets found.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var pet in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@pet.ImageUrl" class="card-img-top" alt="@pet.Name" style="height: 250px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@pet.Name</h5>
                            <p class="card-text text-muted">@pet.Species</p>
                            <p class="card-text">@(pet.Description.Length > 100 ? pet.Description.Substring(0, 100) + "..." : pet.Description)</p>
                            <h6 class="card-subtitle mb-3 text-primary">$@pet.Price.ToString("F2")</h6>
                            <p class="text-sm text-muted">
                                <span class="badge bg-success">Stock: @pet.StockQuantity</span>
                            </p>
                            <div class="btn-group w-100" role="group">
                                <a href="/Home/Details/@pet.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                                <form method="post" action="/Cart/AddToCart" class="d-inline w-100">
                                    <input type="hidden" name="petId" value="@pet.Id">
                                    <input type="hidden" name="quantity" value="1">
                                    <button type="submit" class="btn btn-primary btn-sm w-100">Add to Cart</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
