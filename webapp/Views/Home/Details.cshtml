@model webapp.Models.Pet

@{
    ViewData["Title"] = $"Pet Details - {Model.Name}";
}

<div class="container py-5">
    <a href="/Home/Index" class="btn btn-outline-secondary mb-4">‚Üê Back to Home</a>

    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <p class="text-muted fs-5 mb-3">Species: <strong>@Model.Species</strong></p>

            <div class="alert alert-info">
                <strong>Price:</strong> $@Model.Price.ToString("F2")
            </div>

            <div class="mb-4">
                <h5>Description</h5>
                <p>@Model.Description</p>
            </div>

            <div class="mb-4">
                <p>
                    <span class="badge bg-success fs-6">In Stock: @Model.StockQuantity available</span>
                </p>
            </div>

            @if (Model.StockQuantity > 0)
            {
                <form method="post" action="/Cart/AddToCart" class="mb-4">
                    <input type="hidden" name="petId" value="@Model.Id">
                    <div class="input-group mb-3" style="max-width: 200px;">
                        <label class="input-group-text" for="quantity">Quantity</label>
                        <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" max="@Model.StockQuantity">
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100">Add to Cart</button>
                </form>
            }
            else
            {
                <div class="alert alert-warning">
                    This item is currently out of stock.
                </div>
            }

            <a href="/Home/Index" class="btn btn-outline-secondary w-100">Continue Shopping</a>
        </div>
    </div>
</div>
