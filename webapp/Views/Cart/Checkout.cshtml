@model webapp.Models.ShoppingCart

@{
    ViewData["Title"] = "Checkout";
    var countries = ViewBag.AvailableCountries as string[];
    var states = ViewBag.AustralianStates as string[];
}

<div class="container py-5">
    <h1 class="mb-4">Checkout</h1>

    <div class="row">
        <div class="col-md-8">
            <form method="post" action="/Cart/ProcessCheckout" id="checkoutForm">
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Shipping Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Full Name</label>
                                <input type="text" name="customerName" class="form-control" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                <input type="email" name="customerEmail" class="form-control" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Shipping Address</label>
                            <input type="text" name="shippingAddress" class="form-control" required>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Country</label>
                                <select name="country" class="form-select" required id="countrySelect" onchange="updateStates()">
                                    <option value="">Select a country</option>
                                    @if (countries != null)
                                    {
                                        @foreach (var country in countries)
                                        {
                                            <option value="@country">@country</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-6" id="stateDiv" style="display: none;">
                                <label class="form-label">State</label>
                                <select name="state" class="form-select" id="stateSelect">
                                    <option value="">Select a state</option>
                                    @if (states != null)
                                    {
                                        @foreach (var state in states)
                                        {
                                            <option value="@state">@state</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="mb-3" id="shippingMethodDiv" style="display: none;">
                            <label class="form-label">Shipping Method</label>
                            <div id="shippingMethods"></div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.PetName x @item.Quantity</td>
                                        <td class="text-end">$@item.GetLineTotal().ToString("F2")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-body">
                    <h5 class="card-title">Order Total</h5>
                    <hr>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal:</span>
                        <strong>$@Model.GetSubtotal().ToString("F2")</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping:</span>
                        <strong id="shippingTotal">Calculated at checkout</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-3" id="gstDiv" style="display: none;">
                        <span>GST (10%):</span>
                        <strong id="gstAmount">$0.00</strong>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <h6>Total:</h6>
                        <h6 id="orderTotal">$@Model.GetSubtotal().ToString("F2")</h6>
                    </div>
                    <button type="submit" form="checkoutForm" class="btn btn-success w-100 mt-3">Place Order</button>
                    <a href="/Cart/Index" class="btn btn-outline-secondary w-100 mt-2">Back to Cart</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function updateStates() {
        const country = document.getElementById('countrySelect').value;
        const stateDiv = document.getElementById('stateDiv');
        const shippingMethodDiv = document.getElementById('shippingMethodDiv');
        const stateSelect = document.getElementById('stateSelect');

        if (country === 'Australia') {
            stateDiv.style.display = 'block';
            stateSelect.required = true;
            shippingMethodDiv.style.display = 'block';
            updateShippingMethods();
        } else {
            stateDiv.style.display = 'none';
            stateSelect.required = false;
            if (country) {
                shippingMethodDiv.style.display = 'block';
                document.getElementById('shippingMethods').innerHTML = '<div class="form-check"><input class="form-check-input" type="radio" name="shippingMethod" id="courier" value="International Courier" checked><label class="form-check-label" for="courier">International Courier</label></div>';
            } else {
                shippingMethodDiv.style.display = 'none';
            }
        }
    }

    function updateShippingMethods() {
        const state = document.getElementById('stateSelect').value;
        if (state) {
            const methods = '<div class="form-check"><input class="form-check-input" type="radio" name="shippingMethod" id="auspost" value="AustraliaPost" checked><label class="form-check-label" for="auspost">Australia Post - $10</label></div><div class="form-check"><input class="form-check-input" type="radio" name="shippingMethod" id="courier" value="Courier"><label class="form-check-label" for="courier">Express Courier</label></div>';
            document.getElementById('shippingMethods').innerHTML = methods;
        }
    }

    document.getElementById('stateSelect').addEventListener('change', updateShippingMethods);
</script>
