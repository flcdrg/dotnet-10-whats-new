@model webapp.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-success" role="alert">
                <h4 class="alert-heading">Thank you for your order!</h4>
                <p>Your order has been successfully placed.</p>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <h5>Order Number: <strong>@Model.OrderNumber</strong></h5>
                    <p class="text-muted">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm:ss")</p>
                    <hr>

                    <h6>Shipping To:</h6>
                    <p>
                        <strong>@Model.CustomerName</strong><br>
                        @Model.ShippingAddress<br>
                        @if (!string.IsNullOrEmpty(Model.State))
                        {
                            <span>@Model.State, </span>
                        }
                        @Model.Country
                    </p>

                    <h6>Shipping Method:</h6>
                    <p>@Model.ShippingMethod</p>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Order Items</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-sm mb-0">
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.PetName x @item.Quantity</td>
                                    <td class="text-end">$@item.GetLineTotal().ToString("F2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <span>Subtotal:</span>
                                <strong>$@Model.Subtotal.ToString("F2")</strong>
                            </div>
                            <div class="mb-3">
                                <span>Shipping:</span>
                                <strong>$@Model.ShippingCost.ToString("F2")</strong>
                            </div>
                            @if (Model.GstAmount > 0)
                            {
                                <div class="mb-3">
                                    <span>GST (10%):</span>
                                    <strong>$@Model.GstAmount.ToString("F2")</strong>
                                </div>
                            }
                        </div>
                        <div class="col-md-6">
                            <div class="alert alert-info">
                                <h6>Order Total:</h6>
                                <h4 class="mb-0">$@Model.Total.ToString("F2")</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <p class="text-muted">A confirmation email has been sent to <strong>@Model.CustomerEmail</strong></p>
                <a href="/Home/Index" class="btn btn-primary">Continue Shopping</a>
            </div>
        </div>
    </div>
</div>
