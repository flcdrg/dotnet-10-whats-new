@inject webapp.Services.ICountryService CountryService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Petstore</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/webapp.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var countries = await CountryService.GetAvailableCountriesAsync();
        var currentCountryCode = await CountryService.GetCurrentCountryCodeAsync();
        var returnUrl = Context.Request.Path + Context.Request.QueryString;
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-paw-fill"></i> Petstore
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">About</a>
                        </li>
                    </ul>
                    <form method="post" asp-controller="Country" asp-action="Set" class="d-flex align-items-center me-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                        <select name="countryCode" class="form-select form-select-sm me-2" onchange="this.form.submit()">
                            @foreach (var country in countries)
                            {
                                <option value="@country.Code" selected="@(country.Code.Equals(currentCountryCode, StringComparison.OrdinalIgnoreCase) ? "selected" : null)">@country.Name</option>
                            }
                        </select>
                        <span class="text-muted small">Ship to</span>
                    </form>
                    <form method="get" action="/Home/Search" class="d-flex me-3" role="search" style="width: 300px;">
                        <input class="form-control form-control-sm me-2" type="search" name="query" placeholder="Search pets..." aria-label="Search">
                        <button class="btn btn-outline-primary btn-sm" type="submit">Search</button>
                    </form>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index">
                        <i class="bi bi-cart3"></i> Cart
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    &copy; 2026 - Petstore | <a asp-area="" asp-controller="Home" asp-action="Privacy">About Us</a>
                </div>
                <div class="col-md-6 text-end">
                    <p class="mb-0">Quality Pets & Great Service</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
